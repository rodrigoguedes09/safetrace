# SafeTrace Environment Configuration for Railway
# Copy this file to .env for local development
# Railway will auto-inject DATABASE_URL, REDIS_URL, and PORT

# Application
DEBUG=false

# Blockchair API (get your free key at https://blockchair.com/api)
BLOCKCHAIR_API_KEY=your_api_key_here

# Cache Backend (use 'redis' for production with Redis service)
CACHE_BACKEND=redis

# Redis (Railway auto-injects REDIS_URL when you add Redis service)
# For local dev only:
# REDIS_URL=redis://localhost:6379/0

# PostgreSQL (Railway auto-injects DATABASE_URL when you add PostgreSQL service)
# Required for authentication system (users and api_keys tables)
# For local dev only:
# DATABASE_URL=postgresql://user:pass@localhost:5432/safetrace

# Tracing Configuration
DEFAULT_TRACE_DEPTH=3
MAX_TRACE_DEPTH=10

# PDF Generation (Railway uses /tmp for ephemeral storage)
PDF_OUTPUT_DIR=./reports
