# SafeTrace Environment Configuration
# Copy this file to .env and update values

# Application
APP_NAME=SafeTrace
APP_VERSION=1.0.0
DEBUG=false

# API
API_PREFIX=/api/v1

# Blockchair API
BLOCKCHAIR_API_KEY=your_api_key_here
BLOCKCHAIR_BASE_URL=https://api.blockchair.com
BLOCKCHAIR_REQUESTS_PER_SECOND=10.0
BLOCKCHAIR_MAX_RETRIES=3
BLOCKCHAIR_RETRY_DELAY=1.0

# Cache Configuration
# Options: redis, postgres, memory
CACHE_BACKEND=redis
CACHE_TTL_SECONDS=86400

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# PostgreSQL Configuration (fallback cache)
POSTGRES_DSN=postgresql://user:pass@localhost:5432/safetrace

# Tracing Configuration
DEFAULT_TRACE_DEPTH=3
MAX_TRACE_DEPTH=10

# PDF Generation
PDF_OUTPUT_DIR=./reports
